{
	"manifest_version": 2,

	"name": "Facebook Emoji",
	"description": "Chrome extension to insert facebook emojis by typing their colon names",
	"version": "1.0",

	"browser_action": {
		"default_icon": "icon.png"
	},

	"content_scripts": [
	    {
	      "matches": ["https://www.facebook.com/*"],
	      "js": ["myscript.js", "emojis.json"],
	      "css": ["style.css"],
	      "run_at": "document_end"
	    }
	],
	"web_accessible_resources": [
		"assets/*"
	]
}